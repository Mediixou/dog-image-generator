{
    "compilerOptions": {
      "target": "ES6",              
      "module": "CommonJS",         
      "strict": true,               
      "esModuleInterop": true,      
      "resolveJsonModule": true,     
      "skipLibCheck": true,          
      "outDir": "./dist",            
      "forceConsistentCasingInFileNames": true 
    },
    "include": ["src/**/*.ts"],      
    "exclude": ["node_modules", "dist"] 
  }
  